{
    "apps": [
      {
        "name": "fastapi-app",
        "script": "uvicorn",
        "args": "app.main:app --host 0.0.0.0 --port 8090",
        "interpreter": "python3",
        "instances": 4,
        "exec_mode": "cluster",
        "autorestart": true,
        "watch": false,
        "max_memory_restart": "1G",
        "env": {
          "PYTHON_ENV": "production"
        }
      }
    ]
  }